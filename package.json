{
  "name": "angular-es6",
  "description": "An approach to using ES6 class in Angular JS 1.x",
  "version": "0.0.0",
  "main": "lib/ng-register.js",
  "private": true,
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "es6": true
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "syntax-decorators",
      "ng-annotate",
      [
        "transform-es2015-classes",
        {
          "loose": true
        }
      ],
      "transform-runtime"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-ng-annotate": "^0.3.1",
    "babel-plugin-syntax-decorators": "^6.5.0",
    "babel-plugin-transform-es2015-classes": "^6.6.5",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.5.2",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "live-server": "^0.9.2",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "angular": "^1.5.3",
    "babel-polyfill": "^6.7.4",
    "babel-runtime": "^6.6.1"
  },
  "scripts": {
    "babel": "babel src -d lib -D",
    "dev": "webpack --config build/webpack.config.js --watch",
    "serve": "live-server --port=3004 --open=./example",
    "start": "npm run serve & npm run dev"
  }
}
